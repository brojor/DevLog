{
  "manifest_version": 3,
  "name": "Toggl Auto Tracker",
  "version": "0.1.0",
  "description": "Automatic time tracking for Toggl",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": [],
  "host_permissions": [
    "http://localhost:3000/*"
  ]
}
