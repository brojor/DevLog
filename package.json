{
  "name": "toggl-auto-tracker",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Automatic time tracking solution for Toggl",
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.12.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "NODE_NO_WARNINGS=1 eslint .",
    "lint:fix": "NODE_NO_WARNINGS=1 eslint . --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "typescript": "^5.7.3",
    "unocss": "^66.0.0",
    "vite": "^6.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,json}": [
      "eslint --fix"
    ]
  }
}
